#!/bin/sh

TEMP=$(mktemp --suffix=.c)

cat <<'ENDHEAD' > "$TEMP"
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include <limits.h>
#include <unistd.h>
#include <math.h>
#include <arpa/inet.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>

#include <iostream>
#include <string>
#include <cstring>
#include <functional>

int main(int argc, char** argv)
{
ENDHEAD

declare -a CFLAGS

CFLAGS="-std=gnu++11 "
CFLAGS="$(pkg-config --cflags eigen3) "
CFLAGS=-I"\"$PWD\" "

while [[ "$1" =~ ^- ]] || [[ -f "$1" ]]
do
	CFLAGS="$1"
	shift
done

if [[ "$#" -gt 0 ]]
then
	echo $'\t'"$@" >> "$TEMP"
else
	cat >> "$TEMP"
fi

cat <<'ENDTAIL' >> "$TEMP"
}
ENDTAIL

g++ "${CFLAGS[@]}" -o "${TEMP%%.c}" "$TEMP" -lm || exit 1

"${TEMP%%.c}"
EXITCODE=$?

rm -f "$TEMP" "${TEMP%%.c}"

exit $EXITCODE
